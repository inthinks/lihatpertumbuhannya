/* Reset */
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,p,blockquote,th,td{margin:0;padding:0;}table{border-collapse:collapse;border-spacing:0;margin:0;padding:0;}fieldset,img{display:block; border:0;}address,caption,cite,code,dfn,em,strong,th,var{font-style:normal;font-weight:normal;}ol,ul {list-style:none;}caption,th {text-align:left;}h1,h2,h3,h4,h5,h6{font-size:100%;font-weight:normal;}q:before,q:after{content:'';}abbr,acronym {border:0;}

body {
}
* {
	-webkit-box-sizing:border-box;
	-moz-box-sizing:border-box;
	box-sizing:border-box;
}
strong {
	font-weight:700;
}
em {
	font-style:italic;
}
a {
	text-decoration:none;
}
.wrapper {
	width:100%;
	min-height:100vh;
	position:relative;
	display:block;
	background:url(../images/BG_purplegradient.png) repeat-x center bottom;
	background-attachment:fixed;
}
.wrapper.about {
	height:1750px;
	background:url(../images/BG_elephant.png) no-repeat top center;
	background-size:cover;
}
.headerWrapper {
	width:100%;
	max-width:1080px;
	margin:0 auto;
	position:relative;
}
header {
	text-align:center;
	padding:35px 0;
	float:left;
}
header .logo {
	width:177px;
	height:33px;
	background:url(../images/logo_pediasure.png) no-repeat center center;
	display:block;
	margin:0 auto;
}
nav {
	float:right;
	position:relative;
	z-index:1;
}
nav ul {
	text-align:center;
	padding:40px 0;
}
nav ul li {
	display:inline-block;
	margin:0 15px;
}
nav ul li a {
	font-family: 'GillSansMT';
	font-size:16px;
	font-weight:600;
	color:#6c3382;
}
nav ul li a.active,
nav ul li a:hover {
	text-decoration:underline;
}
.closeBtn {
	width:28px;
	height:24px;
	background:url(../images/icon_close.png) no-repeat center center;
	display:none;
	text-indent:-9999px;
	position:absolute;
	top:30px;
	right:30px;
}
.burgerIcon {
	width:30px;
	height:25px;
	background:url(../images/icon_burger.png) no-repeat center center;
	text-indent:-9999px;
	display:none;
	position:absolute;
	top:30px;
	right:20px;
}
.content {
	width:100%;
	max-width:1080px;
	margin:0 auto;
}
.content h3.tag {
	width:100%;
	font-family: 'abbottsangregular';
	font-size:40px;
	color:#6d3483;
	text-align:center;
	display:inline-block;
	margin-bottom:35px;
}
.content p {
	font-family: 'HelveticaNeueLTStd-Md';
	font-size:18px;
	color:#6c3382;
	line-height:1.4;
}
.content p.bold {
	font-family: 'HelveticaNeueLTStd-Bd';
}
.contentImg {
	width:80%;
	max-width:414px;
	float:left;
}
.contentImg img {
	width:100%;
}
.content ul {
	margin-left:15px;
	float:left;
	margin-right:100px;
}
.content ul li {
	list-style:disc;
	padding-left:20px;
	line-height:1.5;
	font-family: 'HelveticaNeueLTStd-Md';
	font-size:18px;
	color:#6c3382;
}
.about .content {
	max-width:830px;
	margin:0 0 0 60px;
}
.about .content h4 {
	font-family: 'GillSansMT';
	font-size:25px;
	font-weight:600;
	color:#6c3382;
}
.about .content p {
	font-family: 'GillSansMT';
	font-size:18px;
}
.about .content ul li {
	font-family: 'GillSansMT';
	font-size:18px;
	padding-left:0;
}
.about .content span {
	font-weight:600;
}
.productDesc {
	display:block;
	float:left;
	margin-top:20px;
	margin-bottom:50px;
}
.productDesc .image {
	width:25%;
	max-width:127px;
	float:left;
	margin-right:20px;
}
.productDesc .image img {
	width:100%;
}
.productDesc .caption {
	float:left;
	padding-top:30px;
}
.motto {
	width:100%;
	max-width:533px;
}
.motto img {
	width:100%;
	margin:0 auto;
}
footer {
	width:100%;
	position:absolute;
	bottom:0;
	left:0;
	display:block;
	overflow:hidden;
}
.footerWrapper {
	width:100%;
	height:300px;
	position:relative;
}
.footerWrapper .footerRibbon {
	width:100%;
	min-width:640px;
	display:block;
	position:absolute;
	bottom:0;
	right:0;
}
.footerWrapper .footercanCaption {
	min-width:70px;
	max-width:162px;
	width:11%;
	max-width:162px;
	display:block;
	position:absolute;
	bottom:0;
	right:6%;
}
@media only screen and (max-width:1080px) {
.headerWrapper {
	padding:0 20px;
}
.about .content {
	margin:0;
	padding:0 20px;
}
.about .content h4 {
	text-align:center;
}
.content {
	padding:0 20px;
}
.contentImg {
	max-width:300px;
}
}

@media only screen and (max-width:960px) {
nav ul li {
	margin:0 5px;
}
nav ul li a {
	font-size:14px;
}
.content p {
	font-size:16px !important;
}
.content ul li {
	font-size:16px;
}
}

@media only screen and (max-width:960px) {
.contentImg {
	max-width:250px;
}
}

@media only screen and (max-width:768px) {
.wrapper.about {
	min-height:auto;
	height:auto;
	background:#9dc2e0 url(../images/BG_elephantmobile.jpg) no-repeat bottom center;
	background-size:contain;
	padding-bottom:100%;
}
.burgerIcon,
.closeBtn {
	display:block;
}
nav {
	width:70%;
	min-height:100vh;
	background:#6c3382;
	position:fixed;
	top:0;
	right:-70%;
	padding:60px 0;
}
nav ul {
	padding:0;
}
nav ul li {
	display:block;
	text-align:left;
	margin:0;
}
nav ul li a {
	color:#fff;
	padding:10px 30px;
	display:block;
}
nav ul li a.active,
nav ul li a:hover {
	background:#fff;
	color:#6c3382;
	text-decoration:none;
}
.content ul {
	margin-right:0;
}
.content p {
	font-size:14px !important;
}
.content ul li {
	font-size:14px !important;
}
.content h3.tag {
	font-size:32px;
}
.about .content h4 {
	font-size:22px;
}
}

@media only screen and (max-width:560px) {
.content h3.tag {
	font-size:24px;
}
.about .content h4 {
	font-size:18px;
}
.footerWrapper .footerCan {
	bottom:10px;
}
}

@media only screen and (max-width:480px) {
.content {
	padding-bottom:100px;
}
.contentImg {
	float:none;
}
}